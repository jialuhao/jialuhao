<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="model">
	<class
		name="UserInfo"
		table="user_info"
	>
		<meta attribute="sync-DAO">false</meta>
		<id
			name="Id"
			type="integer"
			column="pk_person"
		>
			<generator class="identity"/>
		</id>

		<version name="Version" column="version" type="short"/>
		
		<property
			name="LoginId"
			column="login_id"
			type="string"
			not-null="false"
			length="20"
		/>
		<property
			name="Password"
			column="password"
			type="string"
			not-null="false"
			length="20"
		/>
		<property
			name="MailAddr"
			column="mail_addr"
			type="string"
			not-null="false"
			length="30"
		/>
		
		<property
			name="Dr"
			column="dr"
			type="string"
			not-null="false"
			length="1"
		/>
	<property
			name="area"
			column="area"
			type="string"
			not-null="false"
			length="1"
		/>

		<set name="PersonResumes" inverse="true">
			<key column="pk_person"/>
			<one-to-many class="PersonResume"/>
		</set>

		<set name="ApplyJobInfos" inverse="true">
			<key column="pk_person"/>
			<one-to-many class="ApplyJobInfo"/>
		</set>


	</class>	
</hibernate-mapping>