<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="model">
	<class
		name="BdPost"
		table="bd_post"
	>
		<meta attribute="sync-DAO">false</meta>

		<meta attribute="sync-DAO">false</meta>

		<id
			name="Id"
			type="integer"
			column="post_id"
		>
			<generator class="identity"/>
		</id>

		<version name="Version" column="version" type="short"/>
		
		<property
			name="PostName"
			column="post_name"
			type="string"
			not-null="true"
			length="20"
		/>
		
		<property
			name="Dr"
			column="dr"
			type="string"
			not-null="false"
			length="1"
		/>
		<many-to-one
			name="PostIdRoot"
			column="post_id_root"
			class="BdPostRoot"
			not-null="false"
		>
		</many-to-one>

		<set inverse="true" name="PublishJobInfos">
			<key column="post_id" />
			<one-to-many class="PublishJobInfo" />
		</set>

		



	</class>	
</hibernate-mapping>