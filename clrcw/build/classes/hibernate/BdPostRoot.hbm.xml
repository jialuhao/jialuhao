<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="model">
	<class
		name="BdPostRoot"
		table="bd_post_root"
	>
		<meta attribute="sync-DAO">false</meta>
		<id
			name="Id"
			type="integer"
			column="post_id"
		>
			<generator class="identity"/>
		</id>

		<version name="Version" column="version" type="short"/>
		
		<property
			name="PostName"
			column="post_name"
			type="string"
			not-null="true"
			length="20"
		/>
		
		<property
			name="Dr"
			column="dr"
			type="string"
			not-null="false"
			length="1"
		/>
	

		<set name="BdPosts" inverse="true">
			<key column="post_id"/>
			<one-to-many class="BdPost"/>
		</set>


	</class>	
</hibernate-mapping>